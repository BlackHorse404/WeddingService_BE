@model List<WeddingsWebsite.Models.GioHang>
@if (Model != null)
{
    <table class="bordered w-100" border="0" cellspacing="2" style="border-collapse: collapse;">
        <thead style=" visibility: hidden; height:0px;">
            <tr class="bg-pink-primary-bold text-white" style="font-weight: bold; height: 0;">
                <th>Tên sản phẩm</th>
                <th>Số Lượng</th>
                <th>Đơn giá</th>
                <th>Thành Tiền</th>
            </tr>
        </thead>
    @foreach (var e in Model)
    {
        <tr>
            <td>@e.tenSanPham</td>
            <td>@e.soLuong</td>
            <td>@e.DonGia.ToString("#,0")</td>
            <td>@e.ThanhTien.ToString("#,0")</td>
        </tr>
    }
</table>
}
else
{
    <h2 class="text-danger">Chưa có sản phẩm</h2>
}


